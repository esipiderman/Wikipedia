<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    app:strokeWidth="2dp"
    app:strokeColor="@color/gray_light"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"
    android:clickable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/img_test"
            android:id="@+id/img_item_trend"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <TextView
            android:id="@+id/txt_trend_number"
            android:textColor="?attr/colorPrimary"
            android:background="@drawable/shape_circle"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/txt_title_item_trend"
            android:text="1"
            android:layout_width="18dp"
            android:layout_height="18dp"/>

        <TextView
            android:textColor="@color/black_light"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="john madden"
            android:layout_marginStart="64dp"
            app:layout_constraintTop_toTopOf="@id/img_item_trend"
            android:id="@+id/txt_title_item_trend"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="14sp"
            android:text="American football\ncoach and commentator\n(1936 - 2021)"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/txt_title_item_trend"
            android:id="@+id/txt_subtitle_item_trend"
            app:layout_constraintStart_toStartOf="@id/txt_title_item_trend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_trend_insight"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="+280k"
            android:layout_marginTop="8dp"
            android:textColor="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_subtitle_item_trend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>